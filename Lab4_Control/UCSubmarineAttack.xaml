<UserControl x:Class="Lab4_Control.UCSubmarineAttack"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Lab4_Control"
             mc:Ignorable="d" d:DesignWidth="800" Height="450">
    <Canvas Name="ExternalCanvas" Height="450" Width="800">
        <Image Name="Perisope" Height="450" Width="800" 
               Source="images\periscope.png" Panel.ZIndex="1"
              Stretch="Fill">
        </Image>
        <Label Name="MyPoints" Canvas.Left="317" Canvas.Top="10" Width="171" Height="32"
                Foreground="White" Background="Black" Panel.ZIndex="2" 
               FontSize="20" FontWeight="ExtraBold" Padding="0,-10,0,0"/>
        
        <Canvas Name="InternalCanvas" Height="450" Width="1000">
            <Image Name="Sea" Height="400" Width="1000" Canvas.Top="40"
               Source="images\Sea2.png" 
              Stretch="Fill"/>

            <Image Name="ShipImage" Height="100" Width="150"
         Source="images\battleship.png" Visibility="Hidden"  />
        </Canvas>
    </Canvas>
</UserControl>
